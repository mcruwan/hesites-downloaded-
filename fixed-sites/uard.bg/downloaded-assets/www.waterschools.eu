            });

            $('#cookies .cookies_close').click(function() {
                $('#cookies').animate({height: '0'}, 600, function() {
                    $(this).hide();
                });
                $.cookie('cookiesAgree', 1, { expires: 7*365, path : '/' });
            });
        </script>
    </body>
</html>
