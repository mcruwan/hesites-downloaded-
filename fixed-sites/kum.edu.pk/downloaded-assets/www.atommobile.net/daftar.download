        const mobileSearchInput = document.getElementById('mobile-search-input');

        mobileSearchIcon.addEventListener('click', () => {
            if (window.innerWidth <= 768) {
                mobileSearchContainer.classList.toggle('active');
                if (mobileSearchContainer.classList.contains('active')) {
                    mobileSearchInput.focus();
                }
            }
        });

        mobileSearchForm.addEventListener('submit', (e) => {
            e.preventDefault();
            const searchTerm = mobileSearchInput.value;
            if (searchTerm.trim() !== '') {
                window.location.href = 'https://www.atommobile.net/daftar';
            }
        });

        document.addEventListener('click', (e) => {
            if (!mobileSearchIcon.contains(e.target) && !mobileSearchContainer.contains(e.target)) {
                mobileSearchContainer.classList.remove('active');
            }
        });
        
        window.addEventListener('resize', () => {
            if (window.innerWidth > 768) {
                mobileSearchContainer.classList.remove('active');
            }
        });
        
        const popup = document.getElementById('popup');
        const popupClose = document.getElementById('popup-close');
        const popupButton = document.getElementById('popup-button');
        
        window.addEventListener('load', () => {
            setTimeout(() => {
                popup.classList.add('active');
            }, 500);
        });
        
        popupClose.addEventListener('click', () => {
            popup.classList.remove('active');
        });
        
        popup.addEventListener('click', (e) => {
            if (e.target === popup) {
                e.stopPropagation();
            }
        });
        
        const popupContent = document.querySelector('.popup');
        popupContent.addEventListener('click', (e) => {
            e.stopPropagation();
        });
        
        // Fungsi untuk toggle bagian promo
        const promoToggle = document.getElementById('promo-toggle');
        const promoContent = document.getElementById('promo-content');
        
        promoToggle.addEventListener('click', () => {
            promoToggle.classList.toggle('active');
            promoContent.classList.toggle('active');
        });
        
        // Fungsi untuk klaim promo
        function claimPromo(code) {
            // Buat notifikasi sukses
            const notification = document.createElement('div');
            notification.style.position = 'fixed';
            notification.style.top = '20px';
            notification.style.right = '20px';
            notification.style.backgroundColor = '#4CAF50';
            notification.style.color = 'white';
            notification.style.padding = '15px 20px';
            notification.style.borderRadius = '8px';
            notification.style.fontWeight = 'bold';
            notification.style.zIndex = '3000';
            notification.style.boxShadow = '0 4px 12px rgba(0, 0, 0, 0.15)';
            notification.style.maxWidth = '300px';
            notification.innerHTML = `
                <div style="display: flex; align-items: center;">
                    <i class="fas fa-check-circle" style="margin-right: 10px; font-size: 18px;"></i>
                    <div>
                        <div style="font-weight: bold;">Promo Berhasil Diklaim!</div>
                        <div style="font-size: 14px; margin-top: 3px;">Kode: ${code}</div>
                    </div>
                </div>
            `;
            
            document.body.appendChild(notification);
            
            // Hapus notifikasi setelah 4 detik
            setTimeout(() => {
                notification.style.opacity = '0';
                notification.style.transition = 'opacity 0.5s';
                setTimeout(() => {
                    document.body.removeChild(notification);
                 }, 500);
            }, 4000);
            
            // Ubah tampilan button yang diklik
            event.target.style.backgroundColor = '#45a049';
            event.target.innerHTML = '<i class="fas fa-check"></i> Diklaim';
            event.target.disabled = true;
        }
    </script>
